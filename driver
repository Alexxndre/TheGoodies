/**
 * Driver class. Uses the CustomerMenu class to display a welcome message to the screen as well as a list of avaiable 
 * products in the vending machine. Prompts the user for a product number that relates to one of the items and allows 
 * the user (customer) to make purchases. Updates inventory after a purchase is made.
 *
 * @author Aaron Munford Alex Borenstain Eric Zhu, GoodiesCo
 * @version 1/29/21 - Java 8
 */

import java.util.Scanner;
public class TheGoodiesDriver
{
    public static void main (String [] args){
        CustomerMenu customer = new CustomerMenu();
        Scanner scan = new Scanner(System.in);
        int prodNum, quant;
        int buyAgain;
        boolean order = true;
        System.out.println(customer.welcomeMenu()); //customer menu is printed
        customer.productList();
        while (order){
            System.out.println("Enter an item number: "); //user inputs the item they want to buy and the quantity wanted
            prodNum = scan.nextInt();
            System.out.println("How many would you like to buy: ");
            quant = scan.nextInt();
            customer.update(prodNum,quant);
            System.out.println("Would you like to buy another item? (1=y/2=n)"); //user tells the program if they want to purchase another item
            buyAgain = scan.nextInt();
            
            if (buyAgain == 2){
                order = false;
            }
        }
    }
}
